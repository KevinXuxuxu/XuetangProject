= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :ctime
    = f.number_field :ctime
  .field
    = f.label :belong
    = f.text_field :belong
  .field
    = f.label :teacher
    = f.text_field :teacher
  .actions
    = f.submit 'Save'
