%h4 Filter~
= form_for('content') do |f|
  .field
    = f.label 'name:'
    = f.text_field :name
  .field
    = f.label 'teacher:'
    = f.text_field :teacher
  .field
    = f.label 'blong:'
    %select{:name => 'belong'}
      %option{:value => 'all', :selected => 'selected'} all
      - @belongs.each do |belong|
        %option{:value => "#{belong}"}= "#{belong}"
  .action
    = f.submit "Submit"
